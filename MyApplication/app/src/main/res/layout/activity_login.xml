<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.cg.wu.firstapp.LoginActivity">

    <TextView
        android:id="@+id/tvLogin"
        android:text="登陆" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff0effa2"
        android:textSize="20sp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/txtLoginName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvLogin"
        android:hint="登陆名"/>
    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtLoginName"
        android:hint="密码" />

    <Button
        android:id="@+id/btnCancelLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/txtPassword"
        android:text="取消"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/btnCancelLogin"
        android:layout_below="@id/txtPassword"
        android:text="登陆"/>
</RelativeLayout>
